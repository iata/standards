{
  "openapi": "3.2.0",
  "info": {
    "version": "0.1.0-alpha",
    "title": "The Things API demonstrates reusability on the message schema (ThingInstruction) and entity schema (Thing)"
  },
  "servers": [
    {
      "url": "https://localhost:3000"
    }
  ],
  "paths": {
    "/things/{identifier}": {
      "get": {
        "summary": "Get thing Info by identifier",
        "description": "Retrieve the information of the thing with the identifier.",
        "operationId": "get-thing-identifier",
        "parameters": [
          {
            "name": "identifier",
            "in": "path",
            "description": "Id of an existing thing.",
            "required": true,
            "schema": {
              "$ref": "https://schemas.developer.iata.org/test/things-library-v0.1.0-alpha.json#/$defs/Identifier"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Thing Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "https://schemas.developer.iata.org/test/things-library-v0.1.0-alpha.json#/$defs/Thing"
                }
              }
            }
          },
          "404": {
            "description": "Thing Not Found"
          }
        }
      }
    },
    "/things/instruction": {
      "post": {
        "summary": "Send the things instruction",
        "operationId": "post-things-instruction",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "https://schemas.developer.iata.org/test/things-library-v0.1.0-alpha.json#/$defs/ThingInstruction"
              },
              "examples": {
                "Thing Instruction": {
                  "value": {
                    "identifier": "1234",
                    "thing": {
                      "identifier": "5678",
                      "name": "thing"
                    },
                    "instruction": {
                      "identifier": "9876"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "202": {
            "description": "Instruction Accepted"
          }
        }
      }
    }
  }
}